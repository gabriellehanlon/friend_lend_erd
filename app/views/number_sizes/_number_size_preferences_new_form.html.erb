<%= form_with(model: @preference, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.hidden_field :number_size_id, value: @number_size.id %>

  <div class="form-group">
    <%= f.label :letter_size_id %>

    <%= f.collection_select :letter_size_id, LetterSize.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :style_id %>

    <%= f.collection_select :style_id, Style.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create preference", class: "btn btn-block btn-outline-secondary" %>
<% end %>
