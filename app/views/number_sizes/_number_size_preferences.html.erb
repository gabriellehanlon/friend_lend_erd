<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Preferences

    <a data-toggle="collapse" href="#number_size_preferences_new_form">
      Add preference
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @number_size.preferences.each do |preference| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to preference, preference %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to preference, method: :delete, data: { confirm: "Do you really want to delete this preference" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="number_size_preferences_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
