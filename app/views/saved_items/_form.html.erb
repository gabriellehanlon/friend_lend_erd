<% was_validated = saved_item.errors.any? %>

<%= form_with(model: saved_item, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% item_class = "form-control" %>
    <% item_was_invalid = saved_item.errors.include?(:item) %>

    <% if was_validated %>
      <% if item_was_invalid %>
        <% item_class << " is-invalid" %>
      <% else %>
        <% item_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :item_id %>
    <%= f.collection_select :item_id, Item.all, :id, :to_s, {}, class: "form-control" %>
    <% if item_was_invalid %>
      <% saved_item.errors.full_messages_for(:item).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
