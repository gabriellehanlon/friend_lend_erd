<% was_validated = letter_size.errors.any? %>

<%= form_with(model: letter_size, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for size start -->
  <div class="form-group">
    <% size_class = "form-control" %>
    <% size_was_invalid = letter_size.errors.include?(:size) %>

    <% if was_validated %>
      <% if size_was_invalid %>
        <% size_class << " is-invalid" %>
      <% else %>
        <% size_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :size %>
    <!-- Input for size start -->
    <%= f.text_area :size, class: size_class, placeholder: "Enter size" %>
    <!-- Input for size end -->
    <% if size_was_invalid %>
      <% letter_size.errors.full_messages_for(:size).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for size end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
