<div class="card mb-3">
  <h2 class="card-header h4">
    Item #<%= item.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Closet</dt>
      <dd>
        <% if @item.closet.present? %>
          <%= link_to item.closet, item.closet %>
        <% end %>
      </dd>

      <dt>Item name</dt>
      <dd><%= item.item_name %></dd>

      <dt>Item type</dt>
      <dd>
        <% if @item.item_type.present? %>
          <%= link_to item.item_type, item.item_type %>
        <% end %>
      </dd>

      <dt>Style</dt>
      <dd>
        <% if @item.style.present? %>
          <%= link_to item.style, item.style %>
        <% end %>
      </dd>

      <dt>Letter size</dt>
      <dd>
        <% if @item.letter_size.present? %>
          <%= link_to item.letter_size, item.letter_size %>
        <% end %>
      </dd>

      <dt>Number size</dt>
      <dd>
        <% if @item.number_size.present? %>
          <%= link_to item.number_size, item.number_size %>
        <% end %>
      </dd>

      <dt>Item description</dt>
      <dd><%= item.item_description %></dd>

      <dt>Photos</dt>
      <dd>
        <%= cl_image_tag @item.photos, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back item, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_item_url(item), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to item, method: :delete, data: { confirm: "Do you really want to delete this item?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(item.updated_at) %> ago
  </div>
</div>
