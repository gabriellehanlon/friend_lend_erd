<% was_validated = item.errors.any? %>

<%= form_with(model: item, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% closet_class = "form-control" %>
    <% closet_was_invalid = item.errors.include?(:closet) %>

    <% if was_validated %>
      <% if closet_was_invalid %>
        <% closet_class << " is-invalid" %>
      <% else %>
        <% closet_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :closet_id %>
    <%= f.collection_select :closet_id, Closet.all, :id, :to_s, {}, class: "form-control" %>
    <% if closet_was_invalid %>
      <% item.errors.full_messages_for(:closet).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
