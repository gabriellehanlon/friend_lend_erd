<div class="card mb-3">
  <h2 class="card-header h4">
    Closet #<%= closet.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @closet.user.present? %>
          <%= link_to closet.user, closet.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back closet, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link closet start -->
      <div class="col">
        <% if current_user == @closet.user %>
          <%= link_to edit_closet_url(closet), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link closet end -->

      <!-- Delete link closet start -->
      <div class="col">
        <% if current_user == @closet.user %>
          <%= link_to closet, method: :delete, data: { confirm: "Do you really want to delete this closet?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link closet end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(closet.updated_at) %> ago
  </div>
</div>
