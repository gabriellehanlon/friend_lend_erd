<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Lend Transactions

    <a data-toggle="collapse" href="#user_lend_transactions_new_form">
      Add lend transaction
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.lend_transactions.each do |lend_transaction| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to lend_transaction, lend_transaction %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_lend_transactions_new_form">
        <%= render partial: "users/user_lend_transactions_new_form" %>
      </div>
    </div>

  </ul>
</div>
