<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Saved Items

    <a data-toggle="collapse" href="#user_saved_items_new_form">
      Add saved item
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.saved_items.each do |saved_item| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to saved_item, saved_item %>
        <!-- Show link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_saved_items_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_saved_items_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
