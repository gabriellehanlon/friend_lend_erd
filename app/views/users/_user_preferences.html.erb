<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Preferences

    <a data-toggle="collapse" href="#user_preferences_new_form">
      Add preference
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.preferences.each do |preference| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to preference, preference %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_preferences_new_form">
        <%= render partial: "users/user_preferences_new_form" %>
      </div>
    </div>

  </ul>
</div>
