<div class="card mb-3">
  <h2 class="card-header h4">
    Preference #<%= preference.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @preference.user.present? %>
          <%= link_to preference.user, preference.user %>
        <% end %>
      </dd>

      <dt>Number size</dt>
      <dd>
        <% if @preference.number_size.present? %>
          <%= link_to preference.number_size, preference.number_size %>
        <% end %>
      </dd>

      <dt>Letter size</dt>
      <dd>
        <% if @preference.letter_size.present? %>
          <%= link_to preference.letter_size, preference.letter_size %>
        <% end %>
      </dd>

      <dt>Style</dt>
      <dd>
        <% if @preference.style.present? %>
          <%= link_to preference.style, preference.style %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back preference, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @preference.user %>
          <%= link_to edit_preference_url(preference), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @preference.user %>
          <%= link_to preference, method: :delete, data: { confirm: "Do you really want to delete this preference?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(preference.updated_at) %> ago
  </div>
</div>
